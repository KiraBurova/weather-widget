{
  "name": "weather-app",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@craco/craco": "^6.2.0",
    "@iconify/icons-ic": "^1.1.8",
    "axios": "^0.21.1",
    "mobx": "^6.3.2",
    "mobx-react-lite": "^3.2.0",
    "node-sass": "^6.0.1",
    "react": "^17.0.2",
    "react-beautiful-dnd": "^13.1.0",
    "react-dom": "^17.0.2",
    "react-scripts": "4.0.3",
    "typescript": "^4.3.5"
  },
  "devDependencies": {
    "@iconify/react": "^1.1.4",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^12.0.0",
    "@types/node": "^12.20.18",
    "@types/react": "^17.0.15",
    "@types/react-beautiful-dnd": "^13.1.1",
    "@types/react-dom": "^17.0.9",
    "gh-pages": "^3.2.3",
    "react-beautiful-dnd-test-utils": "^3.2.1"
  },
  "scripts": {
    "start": "craco start",
    "build": "craco build",
    "test": "craco test --coverage --watchAll",
    "eject": "craco eject",
    "build:widget": "npm run build src/index.tsx",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d build"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "jest": {
    "collectCoverageFrom": [
      "<rootDir>/src/**/*.tsx",
      "!<rootDir>/src/api/index.ts",
      "!<rootDir>/src/helpers/index.ts",
      "!<rootDir>/src/types/index.ts",
      "!<rootDir>/src/store/store.ts",
      "!<rootDir>/src/store/context.tsx",
      "!<rootDir>/src/utils/index.ts",
      "!<rootDir>/src/index.tsx"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "coverageReporters": [
      "html",
      "text"
    ]
  },
  "homepage": "https://kiraburova.github.io/weather-widget"
}
